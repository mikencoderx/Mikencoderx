                "user" : user,
                "password" : password
            }
            $.ajax({
                url: "/LogginContraller/LoginUser",
                type: "POST",
                data: {
                    "user": user,
                    "Password": password
                },
                dataType: "json",
                 success: function (response) {
                    console.log(response)
                    if (response.success == true) {
                        console.log(response)
                        window.location.href = "/Home/Index";
                    }
                    else {
                         alert("Usuario o Contraseña Incorrectos");
