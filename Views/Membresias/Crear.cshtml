@model Mikencoderx.Models.Membresias
@{
	Layout="_Lateral";
	ViewData["Title"] = "Crear Membresias";
}
<div class="container ps-5 pt-5">
                <div class="row justify-content-center mt-5 mb-5">
                    <form asp-action="CrearMembresias" method="post" class="col-md-5 col-12">
                        
                        <div class="col-12 mt-5 mb-2">
                            <h1>
                                   @ViewData["Title"]
                            </h1>
                        </div>

                        <div class="col-12 mt-3">
                            <h5 class="text-secondary">
                                    Selecciona Cliente
                            </h5>
                            <select asp-for="FkClientes" asp-items="ViewBag.Clientes" class="form-select" required="">
                                <option value="">Selecciona</option>
                            </select>
                        </div>

                        <div class="col-12 mt-3">
                            <h5 class="text-secondary">
                                Selecciona Proyecto
                            </h5>
                            <select asp-for="FkProyecto" asp-items="ViewBag.Proyectos" class="form-select" required="">
                                <option value="">Selecciona</option>
                            </select>
                        </div>

                        <div class="col-12 mt-3">
                            <h5 class="text-secondary">
                                Selecciona Plan
                            </h5>
                            <select asp-for="FkPlanes" asp-items=" ViewBag.Planes" class="form-select" required="">
                                <option value="">Selecciona</option>
                            </select>
                        </div>

                        <div class="col-12 mt-3">

                            <a asp-action="Index"
                            class="link link-primary text-decoration-none text-primary
                            text-opacity-75 me-5">
                                Regresar</a>

                            <button type="submit" class="btn btn-primary">
                                Guardar
                            </button>                    
                        </div>
                    </form>
                </div>
 </div>
  <script>
        var texto ="Membresias"
        var a=document.getElementById(texto);
        var b=document.getElementById(texto+"-b");
        var c=document.getElementById(texto+"-a");

        a.classList.add("bg-primary");
        b.classList.remove("text-secondary");
        c.classList.remove("p-1")
    </script>