@inject IHttpContextAccessor _Acess
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mikencoderx</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
	<link href="~/css/menulateral.css" rel="stylesheet" />
    <link href="~/css/crud.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Mikencoderx.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
        <div class="container-fluid d-flex flex-row justify-content-center">
        <div class="btn btn-light position-absolute"
        onclick="clase()"
        id="boton">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
              </svg>
        </div>
        <div id="menu">
            <div class="row bg-black ps-2 pe-2" style="min-height: 100vh;">
                <div class="col-auto d-flex flex-column justify-content-between">

                    <div>
                        <div class="col-auto imagen m-2 mb-4" style="background-image: url(https://github.com/mikencoderx/fotos/blob/main/1628386757000.png?raw=true); width: 10rem; height: 10rem;">
                        </div>

                        <div class="pt-2 border-top border-secondary">
                            <div class="col-auto m-2">
                                <a asp-controller="Panel" asp-action="Index" 
                                class="text-decoration-none link link-light
                                text-secondary d-flex align-self-center">
                                <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5rem; height:1.5rem;" fill="currentColor" class="me-1 d-inline bi bi-house" viewBox="0 0 16 16">
                                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z"/>
                                    </svg>
                                    <h5 class="d-inline">Inicio</h5></a>
                            </div>
                            <div class="col-auto m-2">
                                <a asp-area="" asp-controller="Programadores" asp-action="Index"
                                class="text-decoration-none link link-light
                                text-secondary d-flex align-self-center">
                                <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5rem; height:1.5rem"
                                fill="currentColor" class="me-1 d-inline bi bi-terminal-dash" viewBox="0 0 16 16">
                                    <path d="M2 3a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h5.5a.5.5 0 0 1 0 1H2a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h11a2 2 0 0 1 2 2v4a.5.5 0 0 1-1 0V4a1 1 0 0 0-1-1H2Z"/>
                                    <path d="M3.146 5.146a.5.5 0 0 1 .708 0L5.177 6.47a.75.75 0 0 1 0 1.06L3.854 8.854a.5.5 0 1 1-.708-.708L4.293 7 3.146 5.854a.5.5 0 0 1 0-.708ZM5.5 9a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5ZM16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-5.5 0a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 0-1h-3a.5.5 0 0 0-.5.5Z"/>
                                    </svg>
                                    <h5 class="d-inline">Programadores</h5></a>
                            </div>
                            <div class="col-auto m-2">
                                <a asp-area="" asp-controller="Clientes" asp-action="Index"
                                class="text-decoration-none link text-secondary
                                link-light d-flex align-self-center">
                                <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5rem; height:1.5rem" fill="currentColor" class="me-1 d-inline bi bi-universal-access" viewBox="0 0 16 16">
                                        <path d="M9.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0ZM6 5.5l-4.535-.442A.531.531 0 0 1 1.531 4H14.47a.531.531 0 0 1 .066 1.058L10 5.5V9l.452 6.42a.535.535 0 0 1-1.053.174L8.243 9.97c-.064-.252-.422-.252-.486 0l-1.156 5.624a.535.535 0 0 1-1.053-.174L6 9V5.5Z"/>
                                </svg>
                                    <h5 class="d-inline">Clientes</h5></a>
                            </div>
                            <div class="col-auto m-2">
                                <a asp-area="" asp-controller="Proyectos" asp-action="Index"
                                class="text-decoration-none link link-light
                                text-secondary d-flex align-self-center">
                                <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5rem; height:1.5rem"
                                fill="currentColor" class="me-1 d-inline bi bi-boxes" viewBox="0 0 16 16">
                                    <path d="M7.752.066a.5.5 0 0 1 .496 0l3.75 2.143a.5.5 0 0 1 .252.434v3.995l3.498 2A.5.5 0 0 1 16 9.07v4.286a.5.5 0 0 1-.252.434l-3.75 2.143a.5.5 0 0 1-.496 0l-3.502-2-3.502 2.001a.5.5 0 0 1-.496 0l-3.75-2.143A.5.5 0 0 1 0 13.357V9.071a.5.5 0 0 1 .252-.434L3.75 6.638V2.643a.5.5 0 0 1 .252-.434L7.752.066ZM4.25 7.504 1.508 9.071l2.742 1.567 2.742-1.567L4.25 7.504ZM7.5 9.933l-2.75 1.571v3.134l2.75-1.571V9.933Zm1 3.134 2.75 1.571v-3.134L8.5 9.933v3.134Zm.508-3.996 2.742 1.567 2.742-1.567-2.742-1.567-2.742 1.567Zm2.242-2.433V3.504L8.5 5.076V8.21l2.75-1.572ZM7.5 8.21V5.076L4.75 3.504v3.134L7.5 8.21ZM5.258 2.643 8 4.21l2.742-1.567L8 1.076 5.258 2.643ZM15 9.933l-2.75 1.571v3.134L15 13.067V9.933ZM3.75 14.638v-3.134L1 9.933v3.134l2.75 1.571Z"/>
                                    </svg>
                                    <h5 class="d-inline">Proyectos</h5></a>
                            </div>
                            <div class="col-auto m-2">
                                <a class="text-decoration-none link link-light
                                text-secondary d-flex align-self-center">
                                <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5rem; height:1.5rem" fill="currentColor" class="me-1 d-inline bi bi-bookmark" viewBox="0 0 16 16">
                                    <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z"/>
                                    </svg>
                                    <h5 class="d-inline">Membresias</h5></a>
                            </div>
                            <div class="col-auto m-2">
                                <a class="text-decoration-none link link-light
                                text-secondary d-flex align-self-center">
                                <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5rem; height:1.5rem"
                                fill="currentColor" class="me-1 d-inline bi bi-card-text" viewBox="0 0 16 16">
                                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                    <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                                    </svg>
                                    <h5 class="d-inline">Facturas</h5></a>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h6 style="width: 10rem;">
                            @_Acess.HttpContext.Session.GetString("Nombre")
                        </h6>
                        <a asp-controller="LogginContraller" asp-action="Cerrar" class="text-decoration-none link link-light
                        text-secondary pt-5">
                            <h5>                            
                                Cerrrar sesion
                            </h5>
                        </a>
                    </div>                
                </div>
            </div>
        </div>

        <div id="contenido">
            @RenderBody()
        </div>
    <script>
        var x = document.getElementById("boton");
        var y = document.getElementById("menu");
        function clase(){
            y.classList.toggle("active");
            x.classList.toggle("active");
        }
    </script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
