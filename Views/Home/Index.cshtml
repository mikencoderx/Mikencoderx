@model IEnumerable<Mikencoderx.Models.Programadores>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Pagina de inicio";
}

<div class="container-fluid h-xl d-flex flex-column justify-content-end justify-content-lg-center pb-5">
        <div class="row w-100 text-center">
            <div class="col-12 col-sm-12 col-lg-4 text-start text-lg-end">
                <h1 class="text-light titulo">Hi</h1>
            </div>
            <div class="col-sm-1 col-3 col-lg-1 row justify-content-center">
                <div class="col-2 bg-morado">
                </div>
            </div>
            <div class="fondo col-9 col-sm-6 col-lg-5 text-light text-start align-self-center">
                <h1 class="text-w-100"> 
                    Somos 
                    <p class="d-inline text-amarillo">
                    Mikencoderx</p>
                    Desarrolladores web
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2 col-0">
            </div>
            <div class="col-10 col-sm-6 col-lg-2 pt-2 text-start text-lg-end">
                <a class="w-100 btn btn-dark rounded-4 boton">
                    <h4>Contacto</h4>
                </a>
            </div>
        </div>
    </div>

    @if (Model.Count() > 0){
            <div class="container-fluid h-xl">
                <div class="row">
                    <div class="col-12">
                        <h1 class="text-light p-5">
                            Nuestros Programadores
                        </h1>
                    </div>
        @foreach (var item in Model){
                    <div class="col-2">
                        <div class="imagen bg-danger imagen animation" 
                        style="height: 20rem; background-image: url( @Html.DisplayFor(x=>item.URLFoto));">
                        </div>
                        <h3 class="text-light">
                                @Html.DisplayFor(x=>item.Nombre)
                        </h3>
                                <h6 class="text-light">
                        @Html.DisplayFor(x=>item.Descrpcion)
                                </h6>
                    </div>
        }
                </div>
            </div>
    }else{
        <div class="container-fluid h-xl">
            <div class="row">
                <div class="col-12">
                    <div class="text-light p-5">
                        No hay programadores
                    </div>
                </div>
            </div>
        </div>
    }
    
